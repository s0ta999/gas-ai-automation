function fetchNewsTest() {

  const NEWS_API_KEY = 'xxxxxxx';
  const SEND_TO = 'xxxxxx@gmail.com'; // â†ã“ã“ã ã‘è‡ªåˆ†ã®ã«å¤‰ãˆã‚‹

  const url =
    'https://newsapi.org/v2/top-headlines' +
    '?country=us' +
    '&category=business' +
    '&pageSize=30' +
    '&apiKey=' + NEWS_API_KEY;

  const response = UrlFetchApp.fetch(url);
  const data = JSON.parse(response.getContentText());
  const articles = data.articles;

  Logger.log('ç·å–å¾—ä»¶æ•°: ' + articles.length);

  if (articles.length === 0) {
    Logger.log('è¨˜äº‹ãŒå–å¾—ã§ãã¦ã„ã¾ã›ã‚“');
    return;
  }

  // ã‚·ãƒ£ãƒƒãƒ•ãƒ«
  articles.sort(() => Math.random() - 0.5);

  // ãƒ©ãƒ³ãƒ€ãƒ 5ä»¶
  const selected = articles.slice(0, 5);

  Logger.log('===== AIè¦ç´„çµæœ =====');

  // HTMLå½¢å¼ã§ãƒ¡ãƒ¼ãƒ«æœ¬æ–‡ä½œæˆ
  let mailBody = '<div style="font-family:Arial,sans-serif;padding:16px;background:#fff3e0;">';
  mailBody += '<h2>Daily News Summary</h2>';

  selected.forEach((article, index) => {
    const textForAI =
      article.title + '\n' +
      (article.description ? article.description : '');

    const summary = summarizeWithAI(textForAI);

    Logger.log('ã€' + (index + 1) + 'ã€‘' + article.title);
    Logger.log(summary);
    Logger.log('----------------------');

    // ãƒ¡ãƒ¼ãƒ«æœ¬æ–‡ã«è¿½åŠ ï¼ˆã‚¿ã‚¤ãƒˆãƒ«å¤ªå­—ã€èƒŒæ™¯è–„ã‚ªãƒ¬ãƒ³ã‚¸é¢¨ã‚«ãƒ¼ãƒ‰ï¼‰
    mailBody += `<div style="background:#ffe0b2;padding:10px;margin:10px 0;border-radius:8px;">`;
    mailBody += `<p style="margin:0;"><b>ã€${index + 1}ã€‘ ${article.title}</b></p>`;
    mailBody += `<p style="margin:4px 0 0 0;">${summary}</p>`;
    mailBody += `<a href="${article.url}" target="_blank">${article.url}</a>`;
    mailBody += '</div>';
  });

  // ğŸ”— ä¿¡é ¼ã§ãã‚‹ãƒ‹ãƒ¥ãƒ¼ã‚¹ã‚½ãƒ¼ã‚¹ã‚’æœ€å¾Œã«è¿½åŠ 
  mailBody += '<hr style="border:none;border-top:1px solid #ccc;">';
  mailBody += '<p>Trusted News Sources</p>';
  mailBody += '<p>BBC       : https://www.bbc.com/news<br>';
  mailBody += 'CNN       : https://edition.cnn.com<br>';
  mailBody += 'Economist : https://www.economist.com</p>';
  mailBody += '</div>';

  // Gmailé€ä¿¡ï¼ˆHTMLå½¢å¼ï¼‰
  GmailApp.sendEmail(
    SEND_TO,
    'Daily News Summary',
    '',
    { htmlBody: mailBody }
  );
}

function summarizeWithAI(text) {

  const HF_API_KEY = 'hf_xxxx';

  const url =
    'https://router.huggingface.co/hf-inference/models/sshleifer/distilbart-cnn-12-6';

  const payload = {
    inputs: text,
    parameters: {
      max_length: 130,
      min_length: 50,
      do_sample: false
    }
  };

  const options = {
    method: 'post',
    contentType: 'application/json',
    headers: {
      Authorization: 'Bearer ' + HF_API_KEY
    },
    payload: JSON.stringify(payload),
    muteHttpExceptions: true
  };

  const response = UrlFetchApp.fetch(url, options);
  const raw = response.getContentText();
  const data = JSON.parse(raw);

  if (data.error) {
    Logger.log('HFã‚¨ãƒ©ãƒ¼: ' + raw);
    return 'ï¼ˆè¦ç´„ã‚’å–å¾—ã§ãã¾ã›ã‚“ã§ã—ãŸï¼‰';
  }

  return data[0].summary_text;
}
